@model projeto_financeiro.Models.Pessoa.Pessoa
<div>
    <script>
        var password = document.getElementById("senha")
            , confirm_password = document.getElementById("ConfirmaSenha");

        function validatePassword() {
            if (password.value != confirm_password.value) {
                confirm_password.setCustomValidity("Senhas diferentes!");
            } else {
                confirm_password.setCustomValidity('');
            }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
    </script>

    <style>
        .login-box {
            width: 90%;
            margin-top: 20px;
            margin: 7%;
            box-sizing: border-box;
        }

        .login-box-body {
            background-color: darkgray;
            border-radius: 20px;
            box-shadow: initial;
            padding: 20px;
            border-top: 0;
            color: black;
            box-sizing: border-box;
            margin-top: 20px;
        }
    </style>
    <div class="container">
        <h4 class="text-center">Altere sua Senha.</h4>
        <hr />
        <div class="row justify-content-center">

            <div class="text-center">
                <div class="login-box">
                    <div class="col-12">
                        <div class="login-box-body">
                            @if (TempData["mensagemErro"] != null)
                            {

                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                    </svg>
                                    <div class="text-center">
                                        @TempData["mensagemErro"]
                                    </div>

                                </div>
                            }

                            <form asp-action="SalvarSenha">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <div class="col-12">
                                        <label asp-for="SENHA" class="control-label">Senha</label>
                                        <input asp-for="SENHA" class=" form-control" type="password" id="senha">
                                        <span asp-validation-for="SENHA" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="col-12">
                                        <label asp-for="CONFSENHA" class="control-label">Repita sua Senha</label>
                                        <input asp-for="CONFSENHA" class=" form-control" type="password" id="ConfirmaSenha">
                                        <span asp-validation-for="SENHA" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @if (TempData["sucesso"] != null)
                                    {
                                        <button asp-action="Login" class="btn btn-success" value="Voltar">Voltar</button>
                                    }
                                    @if (TempData["sucesso"] == null)
                                    {
                                        <input type="submit" value="Salvar" class="btn btn-primary" />
                                    }

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



